
{% if categories %}
    {% for category in categories %}
            <div class="catgeory-container">
                <h2>{{ category.name }}</h2>
                <div class="products-container">
                {% for product in category.products %}
                    <div class="product">
                        <div class="product_image">
                            <img src="{{ product.image }}"></img>
                        </div>
                        <div class="product_infos">
                            <p class="product-title">{{ product }}</p>
                            <a class="button" href="{{ path('app_product_show', {'id': product.id}) }}">Voir</a>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
    {% endfor %}
{% else %}
    <p> No categories </p>
{% endif %}
